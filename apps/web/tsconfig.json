{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "../../packages/core/*"
      ],
      "@data/*": [
        "../../packages/data/*"
      ],
      "@ui/*": [
        "../../packages/ui/*"
      ],
      "@wasm/*": [
        "../../packages/wasm/*"
      ]
    },
    "jsx": "preserve",
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
